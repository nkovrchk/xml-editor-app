{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "baseUrl": "./src",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
